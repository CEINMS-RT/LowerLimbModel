          <Axis>Z</Axis>
          <Degrees>90</Degrees>
        </Rot>
		<Rot>
          <Axis>X</Axis>
          <Degrees>270</Degrees>
        </Rot>		
      </FPtoGlobalRotations>
	  <origin>
      	<x>0.0</x>
      	<y>0.0</y>
      	<z>0.0</z>
